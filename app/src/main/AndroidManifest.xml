<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom permission for analytics service access -->
    <permission
        android:name="com.sjdroid.paymentanalytics.permission.ACCESS_ANALYTICS"
        android:label="Access Analytics Service"
        android:description="@string/permission_description"
        android:protectionLevel="signature" />

    <!-- Use the custom permission -->
    <uses-permission android:name="com.sjdroid.paymentanalytics.permission.ACCESS_ANALYTICS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PaymentAnalytics">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PaymentAnalytics">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Analytics Service running in separate process -->
        <service
            android:name=".service.AnalyticsService"
            android:process=":analytics"
            android:exported="false"
            android:permission="com.sjdroid.paymentanalytics.permission.ACCESS_ANALYTICS" />
    </application>

</manifest>